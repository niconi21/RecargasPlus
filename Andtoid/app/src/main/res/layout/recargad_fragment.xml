<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Recargas.ui.Recargad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner_montos"
            android:layout_width="298dp"
            android:layout_height="28dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="148dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_numero" />

        <EditText
            android:id="@+id/ed_numero"
            android:layout_width="293dp"
            android:layout_height="43dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="172dp"
            android:ems="10"
            android:hint="@string/numero"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_companias"
            android:layout_width="298dp"
            android:layout_height="28dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_numero" />

        <Button
            android:id="@+id/btn_recarga"
            android:layout_width="178dp"
            android:layout_height="55dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="144dp"
            android:text="Realizar recarga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_montos" />

        <TextView
            android:id="@+id/tvSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="52dp"
            android:text="Saldo: $0.0"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>